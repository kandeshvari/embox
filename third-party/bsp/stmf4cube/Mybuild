	source "./STM32Cube_FW_F4_V1.9.0/Projects/STM32F4-Discovery/Examples/BSP/Src/system_stm32f4xx.c"
}


@Build(stage=1,script="true")
@BuildDepends(core)
module arch extends embox.arch.arch {
	source "arch.c"

	depends system_init
}

